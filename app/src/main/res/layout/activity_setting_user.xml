<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bguni"
    tools:context=".Menu.SettingUserActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:contentPadding="20dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/warnaPutih"
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/warnaHitam"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="SHU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:textAlignment="textEnd"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/edShu"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/bg_edlogin"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/ic_icon_uang"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="Nominal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

                <TextView
                    android:textColor="@color/warnaHitam"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="SKU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:textAlignment="textEnd"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/edSku"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/bg_edlogin"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/ic_icon_uang"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="Nominal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

                <TextView
                    android:textColor="@color/warnaHitam"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Jasa Pinjaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:textAlignment="textEnd"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/edJasaPinjaman"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/bg_edlogin"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/ic_icon_uang"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="Nominal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

                <TextView
                    android:textColor="@color/warnaHitam"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Jasa Tabungan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:textAlignment="textEnd"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/edJasaTabungan"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/bg_edlogin"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/ic_icon_uang"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="Nominal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />


                <Button
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/warnaPutih"
                    android:textSize="17dp"
                    android:layout_gravity="end"
                    android:layout_width="130dp"
                    android:background="@drawable/costum_button"
                    android:layout_height="35dp"
                    android:id="@+id/btSimpan"
                    android:text="Simpan"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>