<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_layout"
    tools:context=".Menu.DetailAngsuranActivity">

    <LinearLayout
        android:padding="20dp"
        android:background="@drawable/bg_box"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/warnaHitam"
            android:text="Detail Angsuran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:textColor="@color/warnaHitam"
                android:text="ID Peminjaman"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/tvIdPeminjaman"
                android:textSize="18dp"
                android:textColor="@color/warnaHitam"
                android:text="Nominal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:textColor="@color/warnaHitam"
                android:text="Angsuran"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/tvAngsuran"
                android:textSize="18dp"
                android:textColor="@color/warnaHitam"
                android:text="Nominal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/warnaPutih"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="35dp"
            android:id="@+id/btBayar"
            android:text="Telah Dibayar"
            android:textAllCaps="false"/>



    </LinearLayout>

</LinearLayout>