<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_layout"
    android:gravity="center_vertical"
    tools:context=".LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        app:contentPadding="20dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/warnaPutih"
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/warnaHitam"
                android:text="Detail Tabungan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/warnaHitam"
                    android:text="Nama Pengguna : "
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvPengguna"
                    android:textAlignment="textEnd"
                    android:textColor="@color/warnaHitam"
                    android:text="Pengguna"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/warnaHitam"
                    android:text="Nominal : "
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvNominal"
                    android:textAlignment="textEnd"
                    android:textColor="@color/warnaHitam"
                    android:text="Nominal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:layout_marginVertical="10dp"
                android:textColor="@color/warnaPutih"
                android:textSize="17dp"
                android:layout_gravity="end"
                android:layout_width="130dp"
                android:background="@drawable/costum_button"
                android:layout_height="35dp"
                android:id="@+id/btKonfirmasi"
                android:text="Konfirmasi"
                android:textAllCaps="false"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>