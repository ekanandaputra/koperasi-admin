<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:background="@drawable/bgtwo"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/chat"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="25dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_box"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="20dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/warnaHitam"
                    android:text="Koperasi Simpan Pinjam Griya Permata Alam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/avachat"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>

                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/warnaHitam"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room Chat"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >



                <LinearLayout
                    android:id="@+id/peminjaman"
                    android:gravity="center"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconstrip"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Peminjaman"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabungan"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconstrip"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tabungan"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user"
                    android:gravity="center"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconstrip"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daftar User"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >



                <LinearLayout
                    android:id="@+id/notifikasi"
                    android:gravity="center"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconbell"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notifikasi"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconset"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Setting"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logout"
                    android:gravity="center"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/iconlog"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/warnaHitam"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout"/>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/total"
        android:background="@color/warnaPutih"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/warnaHitam"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Total Keuntungan Anggota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>



</LinearLayout>